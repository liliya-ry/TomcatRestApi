<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <filter>
    <filter-name>AuthenticationFilter</filter-name>
    <filter-class>filters.AuthorizationFilter</filter-class>
  </filter>

  <filter>
    <filter-name>LoggingFilter</filter-name>
    <filter-class>filters.LoggingFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <servlet-name>PostsServlet</servlet-name>
  </filter-mapping>

  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <servlet-name>CommentsServlet</servlet-name>
  </filter-mapping>

  <filter-mapping>
    <filter-name>LoggingFilter</filter-name>
    <servlet-name>PostsServlet</servlet-name>
  </filter-mapping>

  <filter-mapping>
    <filter-name>LoggingFilter</filter-name>
    <servlet-name>CommentsServlet</servlet-name>
  </filter-mapping>

  <servlet>
    <servlet-name>PostsServlet</servlet-name>
    <servlet-class>servlets.PostsServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>CommentsServlet</servlet-name>
    <servlet-class>servlets.CommentsServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>UsersServlet</servlet-name>
    <servlet-class>servlets.UsersServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>PostsServlet</servlet-name>
    <url-pattern>/posts/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>CommentsServlet</servlet-name>
    <url-pattern>/comments</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>UsersServlet</servlet-name>
    <url-pattern>/users/*</url-pattern>
  </servlet-mapping>

</web-app>
